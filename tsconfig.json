{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@dtos/*": ["src/dtos/*"],
      "@errors/*": ["src/errors/*"],
      "@theme/*": ["./src/theme/*"],
      "@data/*": ["./src/data/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@storage/*": ["./src/storage/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@routes/*": ["./src/routes/*"],
      "@providers/*": ["./src/providers/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "index.js", "metro.config.js"]
}
